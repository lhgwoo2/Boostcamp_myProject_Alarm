<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_list_itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/alarm_list_timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/alarm_list_view_monday"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:text="23:40"
            android:textSize="30sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/alarm_list_view_monday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/alarmlist_monday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_tuesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_monday"
            android:background="@drawable/alarmlist_tuesday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_wednesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_tuesday"
            android:background="@drawable/alarmlist_wednesday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_thursday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_wednesday"
            android:background="@drawable/alarmlist_thursday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_friday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_thursday"
            android:background="@drawable/alarmlist_friday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_saturday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_friday"
            android:background="@drawable/alarmlist_satday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_sunday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alarm_list_view_saturday"
            android:background="@drawable/alarmlist_sunday_selector"
            android:button="@null"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/alarm_list_view_sunday"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:thumb="@drawable/switch_thumb_selector"
            android:track="@drawable/switch_track_selector" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="370dp">

    <ImageView
        android:id="@+id/song_info_dialog_background_iv"
        android:layout_width="310dp"
        android:layout_height="380dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/song_info_dialog_fragment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <GridLayout
            android:id="@+id/song_info_dialog_grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/song_info_dialog_play_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/song_info_dialog_temperate_tv"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/song_info_dialog_play_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/song_info_dialog_temperate_tv"
                    android:layout_below="@+id/song_info_dialog_play_date_tv"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/song_info_dialog_temp_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/song_info_dialog_play_time_tv" />

                <TextView
                    android:id="@+id/song_info_dialog_temperate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/song_info_dialog_temp_icon_iv"
                    android:layout_below="@+id/song_info_dialog_play_time_tv"
                    android:layout_toRightOf="@+id/song_info_dialog_temp_icon_iv"
                    android:gravity="center"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/song_info_dialog_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/song_info_dialog_temperate_tv"
                    android:layout_below="@+id/song_info_dialog_temp_icon_iv"
                    android:gravity="right"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/song_info_dialog_weather_background_iv"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_clear_day_1" />

            <ImageView
                android:id="@+id/song_info_dialog_song_cover_iv"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/images" />

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/song_info_dialog_song_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/song_info_dialog_song_artist_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/song_info_dialog_song_title_tv"
                    android:layout_below="@+id/song_info_dialog_song_title_tv"
                    android:layout_marginTop="10dp"
                    android:shadowColor="#FF464646"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"
                    android:shadowRadius="2.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RelativeLayout>

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_info_dialog_grid_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/song_info_dialog_play_button_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_song_play" />

            <ImageView
                android:id="@+id/song_info_dialog_facebook_button_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_facebook" />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/song_list_item_songimage_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/imageview_border"
        app:srcCompat="@drawable/ic_default_record" />

    <TextView
        android:id="@+id/song_list_item_musictitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/song_list_item_songimage_iv"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/song_list_item_songimage_iv"
        android:layout_toLeftOf="@+id/song_list_item_share_url_iv"
        android:layout_toRightOf="@+id/song_list_item_songimage_iv"
        android:text="음악이름"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/song_list_item_artistname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/song_list_item_musictitle_tv"
        android:layout_alignStart="@+id/song_list_item_musictitle_tv"
        android:layout_below="@+id/song_list_item_musictitle_tv"
        android:text="아티스트"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/song_list_item_playdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/song_list_item_songimage_iv"
        android:layout_alignLeft="@+id/song_list_item_artistname_tv"
        android:layout_alignStart="@+id/song_list_item_artistname_tv"
        android:text="2017년 8월 12일 14시 20분"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/song_list_item_share_url_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/song_list_item_songimage_iv"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_jamendo" />


</RelativeLayout>
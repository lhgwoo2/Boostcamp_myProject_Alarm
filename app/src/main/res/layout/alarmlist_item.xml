<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_list_itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/alarm_list_timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/alarm_list_view_monday"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:focusable="false"
            android:text="23:40"
            android:textSize="40sp"
            app:font="custom1" />

        <CheckBox
            android:id="@+id/alarm_list_view_monday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/alarm_list_timeView"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/alarmlist_monday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_tuesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_monday"
            android:background="@drawable/alarmlist_tuesday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_wednesday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_tuesday"
            android:background="@drawable/alarmlist_wednesday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_thursday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_wednesday"
            android:background="@drawable/alarmlist_thursday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_friday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_thursday"
            android:background="@drawable/alarmlist_friday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_saturday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_friday"
            android:background="@drawable/alarmlist_satday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/alarm_list_view_sunday"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/alarm_list_view_saturday"
            android:background="@drawable/alarmlist_sunday_selector"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:textSize="20sp" />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/alarm_on_off_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:checked="true"
            app:circle_color="#1976D2"
            app:stroke_color="#2196F3"
            app:stroke_width="4dp" />



    </RelativeLayout>


</LinearLayout>
